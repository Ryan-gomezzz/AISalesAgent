{
  "info": {
    "name": "AISalesAgent API",
    "description": "API collection for AISalesAgent MVP",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Frontend-Key",
            "value": "dev-key",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        },
        "description": "Health check endpoint to verify API is running"
      },
      "response": []
    },
    {
      "name": "Converse",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "X-Frontend-Key",
            "value": "dev-key",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"text\": \"Hello, how can you help me?\",\n  \"sessionId\": \"test-session-123\",\n  \"emotion\": {\n    \"label\": \"neutral\",\n    \"valence\": 0.5,\n    \"arousal\": 0.5\n  },\n  \"recentMessages\": []\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/converse",
          "host": ["{{base_url}}"],
          "path": ["api", "converse"]
        },
        "description": "Main conversation endpoint. Sends a message to the AI assistant and receives a response with text and audio URL."
      },
      "response": []
    },
    {
      "name": "Analyze Emotion",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "X-Frontend-Key",
            "value": "dev-key",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"image\": \"base64-encoded-image-data\",\n  \"imageType\": \"image/jpeg\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/analyze-emotion",
          "host": ["{{base_url}}"],
          "path": ["api", "analyze-emotion"]
        },
        "description": "Analyze emotion from an image. Accepts base64-encoded image data. Returns emotion label, valence, and arousal values."
      },
      "response": []
    },
    {
      "name": "Upload Audio",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-Frontend-Key",
            "value": "dev-key",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "audio",
              "type": "file",
              "src": []
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/upload-audio",
          "host": ["{{base_url}}"],
          "path": ["api", "upload-audio"]
        },
        "description": "Upload audio file for transcription. Uses AWS Transcribe batch job. Returns transcript and job ID."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}

